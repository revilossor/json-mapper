  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.4",
    "markdownlint-cli": "^0.26.0",
    "nodemon": "^2.0.7",
    "sort-package-json": "^1.48.1",
    "ts-jest": "^26.5.1",
    "ts-standard": "^10.0.0",
    "typescript": "^4.1.5"
  }
