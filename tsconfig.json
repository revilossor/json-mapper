{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./build",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ "src" ],
  "exclude": ["node_modules"]
}
