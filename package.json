{
  "name": "@revilossor/json-mapper",
  "version": "1.0.0",
  "description": "A declarative way to transform JSON",
  "license": "ISC",
  "author": "Oliver Ross <oliver.ross@hotmail.com>",
  "main": "build/index",
  "typings": "build/index",
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts"
  ],
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc",
    "dev": "node scripts/monmap",
    "postinstall": "husky install",
